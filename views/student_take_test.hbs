
<body>
    {{> main_no_sidebar_start}}

    <!-- place body here -->
    <div class="col-sm-6">
        <h2> Question Title</h2>
        <div class="content-body">
            This is where you will put the question body
        </div>
    </div>
    <div class="col-sm-6">
        <div class="col-xs-12 menu-bar"><button id="compile" class="btn btn-link">Run <i class="fa fa-play" aria-hidden="true"></i></button></div>
        <div class="col-xs-12">
            <div id="editor"></div>
        </div>
        <div class="col-xs-12 compileResults "  >
            <div class="titlebar col-xs-12 no-lr-pad">
                <div class="col-xs-11">Compile Results</div>
                <div class="col-xs-1 text-right no-lr-pad" id="resultsToggle">
                    <button class="btn btn-danger" id="consoleOpen"><i class="fa fa-chevron-up" aria-hidden="true"></i></button>
                </div>
            </div>
            <div class="body-container col-xs-12 no-lr-pad" id="console">
                <div class="titlebar col-xs-12 no-lr-pad">
                    <div class="col-xs-11">Compile Results</div>
                    <div class="col-xs-1 text-right no-lr-pad" id="resultsToggle">
                        <button class="btn btn-danger" id="consoleClose"><i class="fa fa-chevron-down" aria-hidden="true"></i></button>
                    </div>
                </div>
                <pre id="compile-body"></pre>
            </div>
        </div>
    </div>
    {{> main_no_sidebar_end}}
    <script type="text/javascript" src="{{base_url}}js/ace/ace.js"></script>
    <script type="text/javascript" src="{{base_url}}js/aceConfig.js"></script>
