{{> main_with_sidebar_start}}
<div class="mdl-grid">
    {{#each filter_sections}}
    {{#each Exams}}
    <div class="demo-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">{{../name}}: {{title}}</h2>
        </div>
        <div class="mdl-card__supporting-text">
            {{rules_stmt}}
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/exam/take/1">
                Take Test
            </a>
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/edit/exam/{{id}}">
                Edit Test
            </a>
        </div>
    </div>
    {{/each}}
    {{/each}}
</div>

{{> main_with_sidebar_end}}

