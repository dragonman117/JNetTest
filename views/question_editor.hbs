{{>header_start}}
{{>header_end}}
{{>main_no_sidebar_start}}

<div class="mdl-grid">
    <!-- Question ID
    Back to Exam button
    Form containing the following:
        Question Prompt text box
        Graphic string
        start_code
        Save Button

    Plus button above
    List of Test Cases:
        each test case is a separate card
        each card has a minus for delete, and another symbol for edit
    -->

    <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        <a href="/edit/exam/{{exam_id}}" class="mdl-navigation__link"><button class="test_case_button mdl-button mdl-button--raised">Back to Exam</button></a>
        <form action="/edit/exam/{{exam_id}}/question/{{id}}" method="post">

            <input class="mdl-textfield__input" name="id" type="hidden" id="{{id}}" value="{{id}}" readonly>

            <div class="mdl-textfield mdl-js-textfield">
                <label for="prompt">Prompt</label>
                <textarea id="prompt" name="prompt" class="form-control" rows="5" type="text" id="prompt">{{prompt}}</textarea>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <label for="prompt">Graphic</label>
                <textarea id="graphic" name="graphic" class="form-control" rows="5" type="text" id="prompt">{{graphic}}</textarea>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <label for="prompt">Starter Code</label>
                <textarea id="starter_code" name="starter_code" class="form-control" rows="5" type="text" id="prompt">{{starter_code}}</textarea>
            </div>
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                Save Changes
            </button>
        </form>
    </div>

    <!-- FAB button with ripple -->
    <a href="/create/exam/{{exam_id}}/question/{{id}}/test_case"><!-- Mini FAB button -->
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab">
            <i class="material-icons">add</i>
        </button></a>
        {{#each test_cases}}

            <div class="demo-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
                <!-- Mini FAB button -->
                <a href="/delete/exam/{{../exam_id}}/question/{{../id}}/test_case/{{this.id}}"><button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab">
                    <i class="material-icons">remove circle</i>
                </button></a>
            <form method="post" action="/edit/exam/{{../exam_id}}/question/{{../id}}/test_case/{{this.id}}">
                <input id="id" name="id" type="hidden" class="form-control" value={{this.id}} readonly>
                <textarea id="input" name="input" class="form-control" rows="5" type="text">{{this.input}}</textarea>
                <textarea id="expected_output" name="expected_output" class="form-control" rows="5" type="text">{{this.expected_output}}</textarea>
                <button class="test_case_button mdl-button mdl-button--raised" type="submit">Submit T_C:{{this.id}}</button>
            </form>
        </div>
        {{/each}}








</div>



{{>main_no_sidebar_end}}